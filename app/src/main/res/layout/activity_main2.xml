<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c1725163212.mxzy.com.myapplication.Main2Activity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00A2ED">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/back"/>
        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="45dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@id/imgbtn_0"
            android:background="@drawable/share"/>
        <ImageButton
            android:id="@+id/imgbtn_0"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/comment"
            android:background="@drawable/collect"/>
        <ImageButton
            android:id="@+id/imgbtn_1"
            android:layout_width="45dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="60dp"
            android:background="@drawable/praise"/>
        <TextView
            android:id="@+id/popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toRightOf="@id/imgbtn_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="100"/>
        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imgbtn_1"
            android:text="1"/>
        <ImageButton
            android:id="@+id/comment"
            android:layout_width="45dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toLeftOf="@id/imgbtn_1"
            android:background="@drawable/comment"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:id="@+id/imgbanner"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ic_launcher_background"/>
    <WebView
        android:id="@+id/news"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/imgbanner"
        android:layout_height="wrap_content">
    </WebView>
</android.support.constraint.ConstraintLayout>
